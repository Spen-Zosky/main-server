{
  "name": "main-server",
  "version": "1.1.1",
  "description": "Enterprise Main Server Platform with MCP Ecosystem and Universal Architecture",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node app.js",
    "dev:frontend": "cd src/frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd src/frontend && npm run build",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx",
    "activate:all": "node tools/automation/advanced-mcp-manager.js activate",
    "activate:check": "node tools/automation/advanced-mcp-manager.js status",
    "activate:list": "node tools/automation/advanced-mcp-manager.js list",
    "mcp:activate": "node tools/automation/advanced-mcp-manager.js activate",
    "mcp:status": "node tools/automation/advanced-mcp-manager.js status",
    "mcp:list": "node tools/automation/advanced-mcp-manager.js list",
    "claude:guardian": "node tools/automation/mcp-config-guardian.cjs guard",
    "claude:guardian:proactive": "CLAUDE_SILENT_GUARD=true node tools/automation/mcp-config-guardian.cjs proactive",
    "claude:guardian:backup": "node tools/automation/mcp-config-guardian.cjs backup",
    "claude:guardian:restore": "node tools/automation/mcp-config-guardian.cjs restore",
    "claude:validate": "node tools/automation/mcp-config-guardian.cjs validate",
    "claude:fix": "npm run claude:guardian:restore",
    "claude:health": "npm run claude:validate && npm run claude:guardian",
    "claude:setup": "npm run claude:fix && npm run claude:guardian:restore && npm run claude:health",
    "claude:monitor": "node tools/automation/claude-health-monitor.cjs check",
    "claude:monitor:watch": "node tools/automation/claude-health-monitor.cjs monitor",
    "claude:status": "node tools/automation/claude-health-monitor.cjs status",
    "claude:startup": "CLAUDE_SILENT_STARTUP=true node tools/automation/claude-startup-hook.cjs",
    "claude:startup:verbose": "node tools/automation/claude-startup-hook.cjs",
    "dual:start": "npm run dual:start:production && npm run dual:start:test",
    "dual:stop": "pm2 stop all || true",
    "dual:restart": "pm2 restart all || true",
    "dual:status": "pm2 status",
    "dual:logs": "pm2 logs",
    "dual:health": "curl -f http://localhost:3000/health && curl -f http://localhost:5173/health",
    "env:info": "echo 'Environment: NODE_ENV=' && echo $NODE_ENV",
    "db:init": "node src/scripts/db-init-webhunter.js",
    "db:init:webhunter": "node src/scripts/db-init-webhunter.js",
    "db:seed": "node src/scripts/db-init-webhunter.js",
    "db:reset": "node src/scripts/db-reset.js",
    "db:migrate": "node src/scripts/db-migrate.js",
    "db:status": "node src/scripts/db-status.js",
    "db:backup": "node src/scripts/db-backup.js",
    "db:restore": "node src/scripts/db-restore.js",
    "webhunter:setup": "npm run db:init:webhunter",
    "webhunter:status": "npm run db:status",
    "webhunter:reset": "npm run db:reset && npm run db:init:webhunter",
    "oci:status": "./.oci/oci_status.sh",
    "oci:databases": "oci db autonomous-database list --compartment-id $(cat .oci/compartment_info.json | jq -r '.compartment_id') --config-file .oci/config --output table",
    "oci:create-databases": "./.oci/create_databases.sh",
    "oci:validate": "oci iam region list --config-file .oci/config > /dev/null && echo 'âœ… OCI Configuration Valid'",
    "oci:resources": "echo 'Always Free Resource Usage:' && ./.oci/oci_status.sh | grep -A 10 'Always Free Tier Usage'",
    "db:setup": "echo 'Oracle Database setup - Run after creating Autonomous Databases'",
    "db:test-connections": "echo 'Testing Oracle database connections - Requires wallet files'",
    "db:migrate": "echo 'MongoDB to Oracle migration - Requires configured databases'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "commander": "^11.0.0",
    "compression": "^1.8.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "rate-limit-mongo": "^2.3.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "enterprise",
    "platform",
    "mcp",
    "claude",
    "agents",
    "ai-hrms",
    "nose-research",
    "web-hunter",
    "universal-architecture", 
    "oracle-cloud",
    "oci-integration",
    "autonomous-database"
  ],
  "author": "Main Server Platform Team",
  "license": "MIT"
}
